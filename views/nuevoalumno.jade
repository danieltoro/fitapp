            .allcp-form
                .panel
                    .panel-heading
                        .panel-title
                            | Form Elements
                    .panel-body
                        form#form-ui(method='post', action='')
                            h6#spy1.mb20 Formulario
                            .row

                                .col-md-4
                                    h6#spy1.mb20 Apellido paterno
                                    .section
                                        label.field
                                            input#from.gui-input(type='text', name='from', placeholder='Apellido paterno')

                                .col-md-4
                                    h6#spy1.mb20 Apellido materno
                                    .section
                                        label.field
                                            input#from.gui-input(type='text', name='from', placeholder='Apellido materno')
                                .col-md-4
                                    h6#spy1.mb20 Nombres
                                    .section
                                        label.field
                                            input#from.gui-input(type='text', name='from', placeholder='Nombres')
