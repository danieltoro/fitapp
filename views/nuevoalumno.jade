                                .col-md-3
                                    h6#spy1.mb20 País
                                    .section
                                        select.form-control
                                            option Option 1
                                            option Option 2
                                            option Option 3
                                .col-md-3
                                    h6#spy1.mb20 Estado / Provincia / Comuna
                                    .section
                                        label.field
                                            input#from.gui-input(type='text', name='from', placeholder='Estado / Provincia / Comuna')
                                .col-md-6
                                    h6#spy1.mb20 Direccion
                                    .section
                                        label.field
